
<div class="panel-body">
   <%= form_with(model: account_bank, local: true) do |f| %>
     <% if account_bank.errors.any? %>
      <script>
         $(document).ready(function() {
          noty({text: ' <%= pluralize(account_bank.errors.count, "erro", "erros") %> encontrados: </br><ul><% account_bank.errors.each do |attr,message| %><li><%=attr%> <%= message %></li><% end %></ul>', layout: 'bottom', type: 'warning', timeout: 4000});
         });
      </script>
    <% end %>


      <div class="form-group row">
         <label class="col-sm-3 col-form-label text-right">Agência</label>
         <div class="col-sm-6">
             <%= f.select(:agency_bank_id, AgencyBank.all.collect{|k| [k.number_agency, k.id] }, {include_blank: 'Selecione a agência'}, class: "form-control select2", :id => 'federation') %>
         </div>
      </div>
      <div class="form-group row">
         <label class="col-sm-3 col-form-label text-right">Número da conta</label>
         <div class="col-sm-6">
            <%= f.text_field :number_account, class: 'form-control' %>
         </div>
      </div>

      <div class="form-group row">
         <label class="col-sm-3 col-form-label text-right">Limite</label>
         <div class="col-sm-6">
            <%= f.text_field :limit, class: 'form-control' %>
         </div>
      </div>


      <div class="form-group row">
         <div class="col-sm-6">
            <button type="submit" class="btn btn-space btn-primary ">Salvar</button>
            <%= link_to account_banks_path do %><button type="button" class="btn btn-space btn-secondary">Voltar</button><% end %>
         </div>
      </div>
   <% end %>
</div>