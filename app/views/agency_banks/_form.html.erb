<div class="panel-body">
   <%= form_with(model: agency_bank, local: true) do |f| %>
     <% if agency_bank.errors.any? %>
      <script>
         $(document).ready(function() {
          noty({text: ' <%= pluralize(agency_bank.errors.count, "erro", "erros") %> encontrados: </br><ul><% agency_bank.errors.each do |attr,message| %><li><%=attr%> <%= message %></li><% end %></ul>', layout: 'bottom', type: 'warning', timeout: 4000});
         });
      </script>
    <% end %>


      <div class="form-group row">
         <label class="col-sm-3 col-form-label text-right">Número da Agência</label>
         <div class="col-sm-6">
            <%= f.number_field :number_agency, class: 'form-control' %>
         </div>
      </div>
      <div class="form-group row">
         <label class="col-sm-3 col-form-label text-right">Endereço</label>
         <div class="col-sm-6">
            <%= f.text_field :address,class: 'form-control' %>
         </div>
      </div>
      <div class="form-group row">
         <div class="col-sm-6">
            <button type="submit" class="btn btn-space btn-primary ">Salvar</button>
            <%= link_to agency_banks_path do %><button type="button" class="btn btn-space btn-secondary">Voltar</button><% end %>
         </div>
      </div>
   <% end %>
</div>