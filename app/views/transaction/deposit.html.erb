
<div class="main-content container">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading panel-heading-divider">Efetuar depósito</div>
          <div class="panel-body">
             <%= form_with url: deposit_path, local: true do |f| %>

             <% if @transaction.errors.any? %>
                <script>
                   $(document).ready(function() {
                    noty({text: ' <%= pluralize(@transaction.errors.count, "erro", "erros") %> encontrados: </br><ul><% @transaction.errors.each do |attr,message| %><li><%=attr%> <%= message %></li><% end %></ul>', layout: 'bottom', type: 'warning', timeout: 4000});
                   });
                </script>
              <% end %>


                <div class="form-group row">
                   <label class="col-sm-3 col-form-label text-right">Número da Conta</label>
                   <div class="col-sm-6">
                      <%= f.number_field :number_account, class: 'form-control' %>
                   </div>
                </div>

                <div class="form-group row">
                   <label class="col-sm-3 col-form-label text-right">Valor</label>
                   <div class="col-sm-6">
                      <%= f.text_field :price, class: 'form-control' %>
                   </div>
                </div>
               
                <div class="form-group row">
                   <div class="col-sm-6">
                      <button type="submit" class="btn btn-space btn-primary ">Salvar</button>
                      <%#= link_to agency_banks_path do %><button type="button" class="btn btn-space btn-secondary">Voltar</button><%# end %>
                   </div>
                </div>
             <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
